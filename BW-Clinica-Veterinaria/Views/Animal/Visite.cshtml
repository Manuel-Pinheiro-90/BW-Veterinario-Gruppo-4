@model IEnumerable<BW_Clinica_Veterinaria.Models.Entity.Visita>

@{
    var animale = ViewBag.Animale as BW_Clinica_Veterinaria.Models.Entity.Animale;
    ViewData["Title"] = "Cronistoria Visite";
}

<h2 class="text-center">Cronistoria Visite per @animale.Name</h2>

<div class="mb-4">
    <h4>Dettagli Animale</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@animale.Name</dd>
        <dt class="col-sm-2">Tipologia</dt>
        <dd class="col-sm-10">@animale.Tipologia</dd>
        <dt class="col-sm-2">Colore</dt>
        <dd class="col-sm-10">@animale.Colore</dd>
        <dt class="col-sm-2">Microchip</dt>
        <dd class="col-sm-10">@animale.MicroChipCodice</dd>
    </dl>
</div>

<h4 class="mt-4">Visite</h4>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Data</th>
                <th>Esame</th>
                <th>Cura Prescritta</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var visita in Model)
            {
                <tr>
                    <td>@visita.Data.ToString("dd/MM/yyyy")</td>
                    <td>@visita.Esame</td>
                    <td>@visita.CuraPrescritta</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-4">
    
    <a asp-action="AggiungiVisita" asp-route-idAnimale="@animale.IdAnimale" class="btn btn-vet btn-vet-dettagli">Aggiungi Visita</a>
    <a asp-controller="Proprietari" asp-action="Index" class="btn btn-vet btn-vet-elimina">Torna alla Lista Proprietari</a>
</div>
