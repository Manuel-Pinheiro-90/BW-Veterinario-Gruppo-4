@model BW_Clinica_Veterinaria.Models.Entity.Animale

@{
    ViewData["Title"] = "AggiungiAnimale";
    List<BW_Clinica_Veterinaria.Models.Entity.Proprietario> proprietari = ViewBag.Proprietari;
}

<h1>AggiungiAnimale</h1>

<h4>Animale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AggiungiAnimale">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipologia" class="control-label"></label>
                <input asp-for="Tipologia" class="form-control" />
                <span asp-validation-for="Tipologia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Colore" class="control-label"></label>
                <input asp-for="Colore" class="form-control" />
                <span asp-validation-for="Colore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MicroChipCodice" class="control-label"></label>
                <input asp-for="MicroChipCodice" class="form-control" />
                <span asp-validation-for="MicroChipCodice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascita" class="control-label"></label>
                <input asp-for="DataNascita" class="form-control" type="date" />
                <span asp-validation-for="DataNascita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodiceFiscaleProprietario" class="control-label"></label>
                <select asp-for="CodiceFiscaleProprietario" class="form-select input-FPA">
                    @foreach (var p in proprietari)
                    {
                        <option value="@p.CodiceFiscale">@p.Nome @p.Cognome</option>
                    }
                </select>
                <span asp-validation-for="CodiceFiscaleProprietario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Aggiungi Animale" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Torna alla Homepage</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
