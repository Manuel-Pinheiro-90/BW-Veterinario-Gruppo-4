@model BW_Clinica_Veterinaria.Models.Entity.Prodotto

@{
    ViewData["Title"] = "Edit Prodotto";
}

<h2>Edit Prodotto</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tipo" class="control-label"></label>
        <input asp-for="Tipo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdDitta" class="control-label"></label>
        <input asp-for="IdDitta" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdCassetto" class="control-label"></label>
        <input asp-for="IdCassetto" class="form-control" />
    </div>
    
    <input type="hidden" asp-for="IdProdotto" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
