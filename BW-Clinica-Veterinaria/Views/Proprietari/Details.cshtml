@model BW_Clinica_Veterinaria.Models.Entity.Proprietario

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Proprietario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodiceFiscale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodiceFiscale)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cognome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cognome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroTelefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroTelefono)
        </dd>
    </dl>
</div>
<h4>Animali</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Animali.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animali.First().Tipologia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animali.First().Colore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animali.First().MicroChipCodice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animali.First().DataNascita)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Animali)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipologia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Colore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MicroChipCodice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascita)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Torna alla lista</a>
</div>




 