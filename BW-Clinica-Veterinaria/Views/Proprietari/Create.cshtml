@model BW_Clinica_Veterinaria.Models.Entity.Proprietario

@{
    ViewBag.Title = "Crea Proprietario";
}

<h1>Crea Proprietario</h1>

<h4>Proprietario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="form-FPA" asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p class="title-FPA">Aggiungi Proprietario</p>
            <label class="label-FPA">
                <span>CodiceFiscale</span>
                <input asp-for="CodiceFiscale" class="input-FPA" type="text" placeholder="" required="">
                <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
            </label>

            <label class="label-FPA">
                <span>Nome</span>
                <input asp-for="Nome" class="input-FPA" type="text" placeholder="" required="">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </label>

            <label class="label-FPA">
                <span>Cognome</span>
                <input asp-for="Cognome" class="input-FPA" type="text" placeholder="" required="">
                <span asp-validation-for="Cognome" class="text-danger"></span>
            </label>

            <label class="label-FPA">
                <span>NumeroTelefono</span>
                <input asp-for="NumeroTelefono" class="input-FPA" type="text" placeholder="" required="">
                <span asp-validation-for="NumeroTelefono" class="text-danger"></span>
            </label>

            <input type="submit" value="Crea" class="btn btn-primary submit-FPA fw-bold" />
            <a asp-action="Index" class="btn btn-secondary fw-bold border-button">Torna alla home</a>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}