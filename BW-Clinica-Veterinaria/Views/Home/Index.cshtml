@{
    ViewData["Title"] = "Pagina Iniziale";
}

<div class="text-center mt-5">
    <h1 class="display-4">Benvenuto</h1>
    <p class="lead">Utilizza i link sottostanti per registrarti o accedere</p>
    @if (!User.Identity.IsAuthenticated)
    {
        <p>
            <a asp-controller="Utente" asp-action="Register" class="btn btn-primary btn-lg m-2">Registrati</a>
            <a asp-controller="Utente" asp-action="Login" class="btn btn-success btn-lg m-2">Accedi</a>
        </p>
    }
    else
    {
        <p class="mt-4">Benvenuto, <strong>@User.Identity.Name</strong>!</p>
    }
</div>
